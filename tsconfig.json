{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "sourceMap": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": "./src/",
    "declaration": true,
    "moduleResolution": "node",
    "lib": [
      "dom",
      "esnext"
    ],
  },
  "include": [
    "src/**/index.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}